<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="@dimen/widget_root_width"
                android:layout_height="@dimen/widget_root_height"
                android:clickable="true"
    >


    <TextView
        android:id="@+id/clock_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/clock_time_marginleft"
        android:layout_marginTop="@dimen/clock_time_margintop"
        android:shadowColor="@color/widget_clock_time_shadow"
        android:shadowDy="2"
        android:shadowRadius="6"
        android:singleLine="true"
        android:textColor="@color/white_color"
        android:textSize="@dimen/clock_time_textsize"/>

    <ImageView
        android:id="@+id/clock_time_replace"
        android:layout_width="250dp"
        android:layout_height="68dp"
        android:visibility="gone"
        android:layout_marginLeft="@dimen/clock_time_marginleft"
        android:layout_marginTop="@dimen/clock_time_margintop"/>

    <TextView
        android:id="@+id/clock_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/clock_time_replace"
        android:layout_marginLeft="@dimen/clock_date_marginleft"
        android:layout_marginTop="@dimen/clock_date_margintop"
        android:shadowColor="@color/widget_clock_time_shadow"
        android:shadowDy="2"
        android:shadowRadius="6"
        android:singleLine="true"
        android:textColor="@color/white_color"
        android:textSize="@dimen/clock_date_textsize"/>

    <TextView
        android:id="@+id/clock_week"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/clock_time_replace"
        android:layout_marginLeft="@dimen/clock_week_marginleft"
        android:layout_marginTop="@dimen/clock_date_margintop"
        android:layout_toRightOf="@id/clock_date"
        android:shadowColor="@color/widget_clock_time_shadow"
        android:shadowDy="2"
        android:shadowRadius="6"
        android:singleLine="true"
        android:textColor="@color/white_color"
        android:textSize="@dimen/clock_date_textsize"/>

    <TextView
        android:id="@+id/tv_clock"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"/>

</RelativeLayout>
